<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/chat_padding">

    <TextView
        style="@style/ChatTimeHeaderStyle"
        android:id="@+id/time_text_view"
        android:layout_alignParentTop="true"
        tools:text="12:12" />

    <TextView
        style="@style/ChatUserTextMessageStyle"
        android:id="@+id/text_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/time_text_view"
        android:autoLink="web"
        android:background="@drawable/user_bubble"
        tools:text="Before hitting send on a text, delivering a proposal to a client, or taking the stage at an industry conference, run your actions by the R-Factor Test." />

</RelativeLayout>