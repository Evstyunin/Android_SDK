<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/chat_padding"
    android:orientation="vertical"
    android:theme="@style/Usedesk.Item.Message.Operator.Text">

    <TextView
        android:id="@+id/time_text_view"
        style="?attr/usedesk_item_message_time_header_style"
        tools:text="12:12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_image_view"
                android:layout_width="?attr/listPreferredItemHeightSmall"
                android:layout_height="?attr/listPreferredItemHeightSmall"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                app:srcCompat="@drawable/ic_operator_black" />

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/ChatOperatorTextMessageStyle"
                android:id="@+id/text_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/chat_operator_text_message_margin_bottom"
                android:layout_marginStart="@dimen/chat_operator_text_message_margin_left"
                android:autoLink="web"
                android:background="?attr/usedesk_item_message_operator_background"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="Text" />

            <LinearLayout
                android:id="@+id/layout_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/chat_operator_text_message_margin_left"
                android:orientation="vertical" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>