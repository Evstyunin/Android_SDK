<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/attachment_items_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        style="@style/ChatAttachmentButtonStyle"
        android:id="@+id/pick_photo_button">

        <ImageView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            app:srcCompat="@drawable/ic_attachment_photo_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/attachment_dialog_button_text_margin_top"
            android:text="@string/attachment_dialog_picture" />

    </LinearLayout>

    <LinearLayout
        style="@style/ChatAttachmentButtonStyle"
        android:id="@+id/pick_document_button">

        <ImageView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            app:srcCompat="@drawable/ic_attachment_document_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/attachment_dialog_button_text_margin_top"
            android:text="@string/attachment_dialog_document" />

    </LinearLayout>

</LinearLayout>