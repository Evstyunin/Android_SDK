<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Usedesk.Item.Message.User.Text">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="?attr/usedesk_item_marginStart"
        android:layout_marginTop="?attr/usedesk_item_marginTop"
        android:layout_marginEnd="?attr/usedesk_item_marginEnd"
        android:layout_marginBottom="?attr/usedesk_item_marginBottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_text_view"
            style="?attr/usedesk_item_message_time_header_style"
            tools:text="12:12" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="?attr/usedesk_item_message_user_background"
            android:paddingStart="?attr/usedesk_item_message_paddingStart"
            android:paddingTop="?attr/usedesk_item_message_paddingTop"
            android:paddingEnd="?attr/usedesk_item_message_paddingEnd"
            android:paddingBottom="?attr/usedesk_item_message_paddingBottom">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_text_view"
                    style="@style/ChatUserTextMessageStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    tools:text="Before hitting send on a text, delivering a proposal to a client, or taking the stage at an industry conference, run your actions by the R-Factor Test." />
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>