<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Usedesk.Item.Message.Operator.File">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="?attr/usedesk_item_marginStart"
        android:layout_marginTop="?attr/usedesk_item_marginTop"
        android:layout_marginEnd="?attr/usedesk_item_marginEnd"
        android:layout_marginBottom="?attr/usedesk_item_marginBottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_text_view"
            style="?attr/usedesk_item_message_time_header_style"
            tools:text="12:12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_image_view"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    app:srcCompat="@drawable/ic_operator_black"
                    tools:src="@drawable/ic_home_black" />

                <TextView
                    android:id="@+id/name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:text="Алексей Ельфимов" />
            </LinearLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/usedesk_item_message_operator_background"
                android:paddingStart="?attr/usedesk_item_message_paddingStart"
                android:paddingTop="?attr/usedesk_item_message_paddingTop"
                android:paddingEnd="?attr/usedesk_item_message_paddingEnd"
                android:paddingBottom="?attr/usedesk_item_message_paddingBottom">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/file_image_view"
                        android:layout_width="@dimen/chat_file_message_size_small"
                        android:layout_height="@dimen/chat_file_message_size_small"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/ic_home_black" />

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="?attr/listPreferredItemHeightSmall"
                        android:layout_height="?attr/listPreferredItemHeightSmall"
                        android:layout_gravity="center" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>