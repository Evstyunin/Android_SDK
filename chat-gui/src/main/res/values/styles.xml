<resources>

    <style name="Usedesk.TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Usedesk.TextStyle.Chat">

    </style>

    <style name="Usedesk.TextStyle.Chat.Massage">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="Usedesk.TextStyle.Chat.Time">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Usedesk.Fragment">

    </style>

    <style name="Usedesk.Fragment.Chat.Button" parent="">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Usedesk.Fragment.Chat.Button.Attachment">
        <item name="android:src">@drawable/ic_attach_file_black</item>
    </style>

    <style name="Usedesk.Fragment.Chat.Button.Send">
        <item name="android:src">@drawable/ic_send_black</item>
    </style>

    <style name="Usedesk.Fragment.Chat">
        <item name="usedesk_fragment_chat_attachment_style">
            @style/Usedesk.Fragment.Chat.Button.Attachment
        </item>
        <item name="usedesk_fragment_chat_send_style">@style/Usedesk.Fragment.Chat.Button.Send
        </item>
    </style>

    <style name="Usedesk.Dialog">

    </style>

    <style name="Usedesk.Dialog.OfflineForm">

    </style>

    <style name="Usedesk.Dialog.Attachment">
        <item name="usedesk_dialog_attachment_document_title">@string/attachment_dialog_document
        </item>
        <item name="usedesk_dialog_attachment_photo_title">@string/attachment_dialog_photo</item>
        <item name="usedesk_dialog_attachment_camera_title">@string/attachment_dialog_camera</item>
        <item name="usedesk_dialog_attachment_icon_width">60dp</item>
        <item name="usedesk_dialog_attachment_icon_height">60dp</item>
    </style>

    <style name="Usedesk.Item">

    </style>

    <style name="Usedesk.Item.Message">
        <item name="usedesk_item_message_time_header_style">@style/Usedesk.TextStyle.Chat.Time
        </item>

        <item name="usedesk_item_message_paddingTop">8dp</item>
        <item name="usedesk_item_message_paddingBottom">8dp</item>
        <item name="usedesk_item_message_paddingStart">8dp</item>
        <item name="usedesk_item_message_paddingEnd">8dp</item>

        <item name="usedesk_item_message_image_width">160dp</item>
        <item name="usedesk_item_message_image_height">160dp</item>

        <item name="usedesk_item_message_text_style">@style/Usedesk.TextStyle.Chat.Massage</item>
    </style>

    <style name="Usedesk.Item.Message.Service">

    </style>

    <style name="Usedesk.Item.Message.Operator">
        <item name="usedesk_item_message_operator_background">@drawable/operator_bubble</item>
        <item name="usedesk_item_message_paddingStart">16dp</item>

        <item name="usedesk_item_message_operator_icon_width">60dp</item>
        <item name="usedesk_item_message_operator_icon_height">60dp</item>

        <item name="usedesk_item_message_operator_feedback_button_width">40dp</item>
        <item name="usedesk_item_message_operator_feedback_button_height">40dp</item>
        <item name="usedesk_item_message_operator_feedback_button_marginStart">20dp</item>
        <item name="usedesk_item_message_operator_feedback_button_marginEnd">20dp</item>
        <item name="usedesk_item_message_operator_feedback_button_padding">8dp</item>
    </style>

    <style name="Usedesk.Item.Message.User">
        <item name="usedesk_item_message_user_background">@drawable/user_bubble</item>
        <item name="usedesk_item_message_paddingEnd">16dp</item>
    </style>

    <style name="Usedesk.Theme.Chat">
        <!--OfflineForm-->
        <item name="usedesk_offline_form_title">@string/usedesk_offline_form_title</item>
        <item name="usedesk_offline_form_name_hint">@string/usedesk_offline_form_name_hint</item>
        <item name="usedesk_offline_form_email_hint">@string/usedesk_offline_form_email_hint</item>
        <item name="usedesk_offline_form_message_hint">@string/usedesk_offline_form_message_hint
        </item>
        <item name="usedesk_offline_form_send">@string/usedesk_offline_form_send</item>
        <!--MessagePanel-->
        <item name="usedesk_message_panel_form_send">@string/message_hint</item>
        <item name="usedesk_message_panel_attach_icon">@drawable/ic_attach_file_black</item>
        <item name="usedesk_message_panel_send_icon">@drawable/ic_send_black</item>
        <item name="usedesk_message_panel_document_icon">@drawable/ic_document_black</item>
        <item name="usedesk_message_panel_document_remove_icon">@drawable/ic_cancel</item>
        <!--MessageUser-->
        <item name="usedesk_message_user_background">@drawable/user_bubble</item>
        <!--MessageOperator-->
        <item name="usedesk_message_operator_background">@drawable/operator_bubble</item>
        <!--ChatFragment-->
        <item name="usedesk_chat_fragment_loading_text">@string/usedesk_chat_fragment_loading_text
        </item>

        <item name="usedesk_fragment_chat">@style/Usedesk.Fragment.Chat</item>
        <item name="usedesk_dialog_offlineform">@style/Usedesk.Dialog.OfflineForm</item>
        <item name="usedesk_dialog_attachment">@style/Usedesk.Dialog.Attachment</item>
        <item name="usedesk_item_message_service">@style/Usedesk.Item.Message.Service</item>
        <item name="usedesk_item_message_operator">@style/Usedesk.Item.Message.Operator</item>
        <item name="usedesk_item_message_user">@style/Usedesk.Item.Message.User</item>
    </style>
</resources>