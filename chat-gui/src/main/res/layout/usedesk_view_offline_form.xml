<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/offline_form_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    tools:layout_gravity="bottom"
    tools:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/offline_form_title" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/offline_form_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="?attr/usedesk_content_marginStart"
            android:layout_marginTop="?attr/usedesk_content_marginTop"
            android:layout_marginEnd="?attr/usedesk_content_marginEnd"
            android:layout_marginBottom="?attr/usedesk_content_marginBottom"
            android:hint="@string/offline_form_name_hint"
            android:inputType="textPersonName|textCapWords"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/offline_form_email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="?attr/usedesk_content_marginStart"
            android:layout_marginTop="?attr/usedesk_content_marginTop"
            android:layout_marginEnd="?attr/usedesk_content_marginEnd"
            android:layout_marginBottom="?attr/usedesk_content_marginBottom"
            android:hint="@string/offline_form_email_hint"
            android:inputType="textEmailAddress"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/offline_form_message_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="?attr/usedesk_content_marginStart"
            android:layout_marginTop="?attr/usedesk_content_marginTop"
            android:layout_marginEnd="?attr/usedesk_content_marginEnd"
            android:layout_marginBottom="?attr/usedesk_content_marginBottom"
            android:hint="@string/offline_form_message_hint"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="5"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/offline_form_send_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/send"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/message_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/message_edit_text"
        tools:visibility="visible" />
</LinearLayout>