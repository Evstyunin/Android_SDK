<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:theme="@style/Usedesk.Theme.Chat">

    <include layout="@layout/usedesk_view_message_time" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="32dp"
        android:background="?attr/usedesk_message_user_background"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="ASDjashd asjkhd ajks hdha sdkha adasd asdasd ada das" />

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/ic_home_black" />
    </LinearLayout>
</LinearLayout>